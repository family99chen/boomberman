        <Ellipse x:Name="fourth" Margin="185,286,795,197" />
        <Label Content="Boomberman" HorizontalAlignment="Left" Margin="138,35,0,0" VerticalAlignment="Top" Height="65" Width="283" FontSize="40" Foreground="#FFFFFF0B" FontWeight="Bold">
