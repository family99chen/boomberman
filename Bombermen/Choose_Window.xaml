<Window x:Class="Bombermen.Choose_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bombermen"
        mc:Ignorable="d"
        Title="Choose_Window" Height="450" Width="500" Background="Black">
    <Grid Background="Black">
        <ListBox x:Name="list" HorizontalAlignment="Left" Height="360" Margin="0,60,0,0" VerticalAlignment="Top"  FontSize="20" Foreground="#FFFFFF0B" Background="Black" BorderThickness="0" MouseDoubleClick="Click"/>
        <Label Content="Chose level" HorizontalAlignment="Center" Height="50" Margin="0,10,0,0" VerticalAlignment="Top" Width="175" FontSize="30" Foreground="#FFFFFF0B"/>

    </Grid>
</Window>
